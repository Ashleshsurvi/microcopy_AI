{
  "manifest_version": 3,
  "name": "Microcopy Generator",
  "version": "1.0",
  "description": "Generate microcopy variations from highlighted text",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
